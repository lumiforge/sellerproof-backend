meta {
  name: Get video success with valid JWT
  type: http
  seq: 1
}

get {
  url: {{baseUrl}}/api/v1/video?video_id={{testVideoId}}
  auth: bearer
}

auth:bearer {
  token: {{adminAccessToken}}
}

tests {
  test('Should return 200 OK and valid video information for valid JWT token and video_id', function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.be.an('object');

    // Validate all required fields exist
    expect(res.body).to.have.property('video_id');
    expect(res.body).to.have.property('file_name');
    expect(res.body).to.have.property('file_size_bytes');
    expect(res.body).to.have.property('duration_seconds');
    expect(res.body).to.have.property('upload_status');
    expect(res.body).to.have.property('publish_status');
    expect(res.body).to.have.property('uploaded_at');

    // Validate field types
    expect(res.body.video_id).to.be.a('string');
    expect(res.body.file_name).to.be.a('string');
    expect(res.body.file_size_bytes).to.be.a('number');
    expect(res.body.duration_seconds).to.be.a('number');
    expect(res.body.upload_status).to.be.a('string');
    expect(res.body.publish_status).to.be.a('string');
    expect(res.body.uploaded_at).to.be.a('number');

    // Validate field values are not empty or invalid
    expect(res.body.video_id).to.not.equal('');
    expect(res.body.file_name).to.not.equal('');
    expect(res.body.file_size_bytes).to.be.at.least(0);
    expect(res.body.duration_seconds).to.be.at.least(0);
    expect(res.body.upload_status).to.be.oneOf(['pending', 'uploading', 'processing', 'completed', 'failed']);
    expect(res.body.publish_status).to.be.oneOf(['private', 'published']);
    expect(res.body.uploaded_at).to.be.at.least(0);

    // Validate video_id matches the requested one
    expect(res.body.video_id).to.equal(bru.getEnvVar("testVideoId"));
  });
}