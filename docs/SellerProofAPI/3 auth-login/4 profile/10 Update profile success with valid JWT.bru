meta {
  name: Update profile success with valid JWT
  type: http
  seq: 10
}

put {
  url: {{baseUrl}}/api/v1/auth/profile
  body: json
  auth: bearer
}

auth:bearer {
  token: {{adminAccessToken}}
}

body:json {
  {
    "full_name": "Updated Test User"
  }
}

tests {
  test('Should return 200 OK and updated user profile for valid JWT token', function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.be.an('object');
    
    // Validate all required fields exist
    expect(res.body).to.have.property('user_id');
    expect(res.body).to.have.property('email');
    expect(res.body).to.have.property('full_name');
    expect(res.body).to.have.property('role');
    expect(res.body).to.have.property('org_id');
    expect(res.body).to.have.property('email_verified');
    expect(res.body).to.have.property('created_at');
    expect(res.body).to.have.property('updated_at');
    
    // Validate field types
    expect(res.body.user_id).to.be.a('string');
    expect(res.body.email).to.be.a('string');
    expect(res.body.full_name).to.be.a('string');
    expect(res.body.role).to.be.a('string');
    expect(res.body.org_id).to.be.a('string');
    expect(res.body.email_verified).to.be.a('boolean');
    expect(res.body.created_at).to.be.a('number');
    expect(res.body.updated_at).to.be.a('number');
    
    // Validate that full_name was updated
    expect(res.body.full_name).to.equal('Updated Test User');
    
    // Validate field values are not empty (where applicable)
    expect(res.body.user_id).to.not.equal('');
    expect(res.body.email).to.not.equal('');
    expect(res.body.role).to.not.equal('');
    expect(res.body.org_id).to.not.equal('');
    
    // Validate email format
    expect(res.body.email).to.match(/^[^\s@]+@[^\s@]+\.[^\s@]+$/);
    
    // Validate timestamp values are reasonable (not negative)
    expect(res.body.created_at).to.be.at.least(0);
    expect(res.body.updated_at).to.be.at.least(0);
  });
}