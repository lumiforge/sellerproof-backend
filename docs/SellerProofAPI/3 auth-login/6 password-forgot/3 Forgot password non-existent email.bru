meta {
  name: Forgot password non-existent email
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/api/v1/auth/forgot-password
  body: json
  auth: none
}

body:json {
  {
    "email": "nonexistent@example.com"
  }
}

tests {
  test('Should return 200 OK even for non-existent email (security)', function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.have.property('message');
    expect(res.body.message).to.include('password reset code has been sent');
  });
}