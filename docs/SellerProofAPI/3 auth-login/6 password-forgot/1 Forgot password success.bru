meta {
  name: Forgot password success
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/v1/auth/forgot-password
  body: json
  auth: none
}

body:json {
  {
    "email": "{{adminEmail}}"
  }
}

tests {
  test('Should return 200 OK for valid email', function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.have.property('message');
    expect(res.body.message).to.include('password reset code has been sent');
  });
}