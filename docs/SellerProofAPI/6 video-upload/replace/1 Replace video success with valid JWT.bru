meta {
  name: Replace video success with valid JWT
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/v1/video/upload/replace
  body: json
  auth: bearer
}

auth:bearer {
  token: {{adminAccessToken}}
}

body:json {
  {
    "video_id": "{{testVideoId}}",
    "file_name": "new-video.mp4",
    "file_size_bytes": 1048576,
    "duration_seconds": 60
  }
}

tests {
  test('Should return 200 OK and valid upload initiation response for replacement', function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.be.an('object');
    expect(res.body).to.have.property('video_id');
    expect(res.body).to.have.property('upload_id');
    expect(res.body.video_id).to.equal(bru.getEnvVar("testVideoId"));
    expect(res.body.upload_id).to.not.equal('');
  });
}
