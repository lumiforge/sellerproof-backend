meta {
  name: Initiate upload exceeding video size limit
  type: http
  seq: 15
}

post {
  url: {{baseUrl}}/api/v1/video/upload/initiate
  body: json
  auth: bearer
}

auth:bearer {
  token: {{adminAccessToken}}
}

body:json {
  {
    "file_name": "large-video-file.mp4",
    "file_size_bytes": 2147483648,
    "duration_seconds": 3600
  }
}

tests {
  test('Should return 403 Forbidden because file size exceeds video limit', function() {
    expect(res.status).to.equal(403);
    expect(res.body).to.have.property('error');
    expect(res.body.message).to.include('video size limit exceeded');
  });
}