meta {
  name: Update member role success with valid JWT admin
  type: http
  seq: 1
}

put {
  url: {{baseUrl}}/api/v1/organization/members/{{simpleUserId}}/role
  body: json
  auth: bearer
}

auth:bearer {
  token: {{adminAccessToken}}
}

body:json {
  {
    "new_role": "manager"
  }
}

tests {
  test('Should return 200 OK and updated member role for valid JWT with admin role', function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.be.an('object');

    expect(res.body).to.have.property('message');
    expect(res.body.message).to.be.a('string').that.equals('member role updated successfully');
  });
}
