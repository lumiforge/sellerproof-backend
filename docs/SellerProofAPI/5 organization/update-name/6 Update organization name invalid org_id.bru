meta {
  name: Update organization name invalid org_id
  type: http
  seq: 6
}

put {
  url: {{baseUrl}}/api/v1/organization/name?org_id=invalid-uuid
  body: json
  auth: bearer
}

auth:bearer {
  token: {{adminAccessToken}}
}

body:json {
  {
    "name": "New Name"
  }
}

tests {
  test('Should return 400 Bad Request', function() {
    expect(res.status).to.equal(400);
    expect(res.body.message).to.include('invalid org_id: must be a valid UUID');
  });
}