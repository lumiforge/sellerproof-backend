meta {
  name: Forgot password invalid email
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/api/v1/auth/forgot-password
  body: json
  auth: none
}

body:json {
  {
    "email": "invalid-email-format"
  }
}

tests {
  test('Should return 400 Bad Request for invalid email format', function() {
    expect(res.status).to.equal(400);
    expect(res.body).to.have.property('error');
    expect(res.body.error).to.include('Bad Request');
  });
}