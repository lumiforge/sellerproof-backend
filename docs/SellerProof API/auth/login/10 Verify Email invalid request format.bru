meta {
  name: Verify Email invalid request format
  type: http
  seq: 10
}

post {
  url: {{baseUrl}}/api/v1/auth/verify-email
  body: json
  auth: inherit
}

body:json {
  {
    "email": "invalid-email-format",
    "code": ""
  }
}

tests {
  test('Should return 400 Bad Request for invalid email format and empty code', function() {
    expect(res.status).to.equal(400);
    expect(res.body).to.have.property('error');
    expect(res.body.error).to.include('Bad Request');
  });
}