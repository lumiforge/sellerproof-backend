meta {
  name: Verify Email correct
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/api/v1/auth/verify-email
  body: json
  auth: inherit
}

body:json {
  {
    "email": "{{testEmail}}",
    "code": "{{validVerificationCode}}"
  }
}

tests {
  test('Should return 200 OK for successful email verification', function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.have.property('message');
    expect(res.body.message).to.include('Email verified successfully');
  });
}
