meta {
  name: Refresh invalid token
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/api/v1/auth/refresh
  body: json
  auth: inherit
}

body:json {
  {
    "refresh_token": "invalid_refresh_token_string"
  }
}

tests {
  test('Should return 401 Unauthorized for invalid refresh token', function() {
    expect(res.status).to.equal(401);
    expect(res.body).to.have.property('error');
    expect(res.body.error).to.include('Unauthorized');
  });
}