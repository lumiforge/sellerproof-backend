meta {
  name: Invite manager user as manager in admin org
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/v1/organization/invite
  body: json
  auth: bearer
}

auth:bearer {
  token: {{adminAccessToken}}
}

body:json {
  {
    "email": "{{managerEmail}}",
    "role": "manager",
    "org_id": "{{adminOrgId}}"
  }
}

tests {
  test('Should invite second user as manager', function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.have.property('invite_code');
    bru.setEnvVar("managerInviteCode", res.body.invite_code);
  });
}