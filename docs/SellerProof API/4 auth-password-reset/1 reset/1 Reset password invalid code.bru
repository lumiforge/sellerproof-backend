meta {
  name: Reset password invalid code
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/v1/auth/reset-password
  body: json
  auth: none
}

body:json {
  {
    "email": "{{adminEmail}}",
    "code": "000000",
    "new_password": "newPassword123!"
  }
}

tests {
  test('Should return 400 Bad Request for invalid code', function() {
    expect(res.status).to.equal(400);
    expect(res.body).to.have.property('error');
    expect(res.body.message).to.include('invalid');
  });
}