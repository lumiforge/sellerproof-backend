meta {
  name: Invite user success with valid JWT manager
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/api/v1/organization/invite
  body: json
  auth: bearer
}

auth:bearer {
  token: {{secondUserAccessToken}}
}

body:json {
  {
    "email": "{{simpleUserEmail}}",
    "role": "user",
    "org_id": "{{testOrgId}}"
  }
}

tests {
  test('Should return 200 OK and valid invite response for valid manager JWT token', function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.be.an('object');

    // Validate all required fields exist
    expect(res.body).to.have.property('invitation_id');
    expect(res.body).to.have.property('invite_code');
    expect(res.body).to.have.property('expires_at');
    expect(res.body).to.have.property('email');
    expect(res.body).to.have.property('role');

    // Validate field types
    expect(res.body.invitation_id).to.be.a('string');
    expect(res.body.invite_code).to.be.a('string');
    expect(res.body.expires_at).to.be.a('number');
    expect(res.body.email).to.be.a('string');
    expect(res.body.role).to.be.a('string');

    // Validate field values are not empty
    expect(res.body.invitation_id).to.not.equal('');
    expect(res.body.invite_code).to.not.equal('');
    expect(res.body.email).to.not.equal('');
    expect(res.body.role).to.not.equal('');

    // Validate email format
    expect(res.body.email).to.include('@');

    // Validate role is valid
    expect(res.body.role).to.be.oneOf(['user', 'manager', 'admin']);

    // Validate expires_at is in the future
    const currentTime = Math.floor(Date.now() / 1000);
    expect(res.body.expires_at).to.be.greaterThan(currentTime);

    // Validate email matches request
    expect(res.body.email).to.equal(bru.getEnvVar('simpleUserEmail'));

    // Validate role matches request
    expect(res.body.role).to.equal('user');
  });
}