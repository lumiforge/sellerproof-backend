meta {
  name: Setup - Invite simple user
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/api/v1/organization/invite
  body: json
  auth: bearer
}

auth:bearer {
  token: {{accessToken}}
}

body:json {
  {
    "email": "{{simpleUserEmail}}",
    "role": "user",
    "org_id": "{{testOrgId}}"
  }
}

tests {
  test('Should invite simple user', function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.have.property('invite_code');
    bru.setEnvVar("userInviteCode", res.body.invite_code);
  });
}