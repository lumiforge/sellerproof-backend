meta {
  name: Simple User switches to Admin org (prepare for status tests)
  type: http
  seq: 18
}

post {
  url: {{baseUrl}}/api/v1/auth/switch-organization
  body: json
  auth: bearer
}

auth:bearer {
  token: {{simpleUserAccessToken}}
}

body:json {
  {
    "org_id": "{{adminOrgId}}",
    "refresh_token": "{{simpleUserRefreshToken}}"

  }
}

tests {
  test('Should return 200 OK and save new tokens', function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.be.an('object');
    expect(res.body.access_token).to.be.a('string');
    expect(res.body.refresh_token).to.be.a('string');
    expect(res.body.access_token).to.not.equal('');
    expect(res.body.refresh_token).to.not.equal('');
    
    bru.setEnvVar('simpleUserAccessToken', res.body.access_token);
    bru.setEnvVar('simpleUserRefreshToken', res.body.refresh_token);
  });
}
