meta {
  name: Publish video success with valid JWT admin
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/v1/video/publish
  body: {
    "video_id": "test-video-id-12345"
  }
  headers: {
    Content-Type: application/json,
    Authorization: Bearer {{adminToken}}
  }
}

tests {
  test("Should return 200 OK", function() {
    expect(response.status).to.equal(200);
  });

  test("Should return success message", function() {
    expect(response.body.message).to.equal("Video published successfully");
  });

  test("Should return public URL", function() {
    expect(response.body.public_url).to.be.a('string');
    expect(response.body.public_url).to.include('/api/v1/video/public?token=');
  });

  test("Should return public token", function() {
    expect(response.body.public_token).to.be.a('string');
    expect(response.body.public_token).to.have.length(43); // base64 of 32 bytes
  });
}