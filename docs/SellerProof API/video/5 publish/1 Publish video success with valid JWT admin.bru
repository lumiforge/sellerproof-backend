meta {
  name: Publish video success with valid JWT admin
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/v1/video/publish
  body: json
  auth: bearer
}

auth:bearer {
  token: {{adminAccessToken}}
}

body:json {
  {
    "video_id": "{{testVideoId}}"
  }
}

tests {
  test("Should return 200 OK", function() {
    expect(res.status).to.equal(200);
  });

  test("Should return success message", function() {
    expect(res.body.message).to.equal("Video published successfully");
  });

  test("Should return public URL", function() {
    expect(res.body.public_url).to.be.a('string');
    expect(res.body.public_url).to.include('/api/v1/video/public?token=');
  });

  test("Should return public token", function() {
    expect(res.body.public_token).to.be.a('string');
    expect(res.body.public_token).to.have.length(43);
  });

  bru.setEnvVar("publicVideoUrl", res.body.public_url);
  bru.setEnvVar("publicShareToken", res.body.public_token);
}
