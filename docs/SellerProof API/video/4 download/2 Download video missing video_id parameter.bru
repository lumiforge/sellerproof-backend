meta {
  name: Download video missing video_id parameter
  type: http
  seq: 2
}

get {
  url: {{baseUrl}}/api/v1/video/download
  auth: bearer
}

auth:bearer {
  token: {{accessToken}}
}

tests {
  test('Should return 400 Bad Request when video_id parameter is missing', function() {
    expect(res.status).to.equal(400);
    expect(res.body).to.be.an('object');
    expect(res.body).to.have.property('error');
    expect(res.body.message).to.include('video_id is required');
  });
}