meta {
  name: Get upload URLs success with valid JWT
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/api/v1/video/upload/urls
  body: json
  auth: bearer
}

auth:bearer {
  token: {{adminAccessToken}}
}

body:json {
  {
    "video_id": "{{testVideoId}}",
    "total_parts": 3
  }
}

tests {
  test('Should return 200 OK and valid upload URLs for valid JWT token', function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.be.an('object');
    
    // Validate all required fields exist
    expect(res.body).to.have.property('part_urls');
    expect(res.body).to.have.property('expires_at');
    
    // Validate field types
    expect(res.body.part_urls).to.be.an('array');
    expect(res.body.expires_at).to.be.a('number');
    
    // Validate field values are not empty
    expect(res.body.part_urls).to.have.length(3);
    expect(res.body.part_urls[0]).to.be.a('string');
    expect(res.body.part_urls[0]).to.not.equal('');
    expect(res.body.expires_at).to.be.at.least(Date.now() / 1000);
    
    // Store all part URLs for subsequent tests
    for (let i = 0; i < res.body.part_urls.length; i++) {
      bru.setEnvVar("partUrl" + (i + 1), res.body.part_urls[i]);
    }
  });
}