meta {
  name: Share video success with valid JWT
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/v1/video/share
  body: json
  auth: bearer
}

auth:bearer {
  token: {{accessToken}}
}

body:json {
  {
    "video_id": "{{testVideoId}}",
    "recipient_email": "test.user+share@example.com"
  }
}

tests {
  test('Should return 200 OK and valid share response for valid JWT token', function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.be.an('object');

    // Validate all required fields exist
    expect(res.body).to.have.property('share_id');
    expect(res.body).to.have.property('video_id');
    expect(res.body).to.have.property('recipient_email');
    expect(res.body).to.have.property('status');
    expect(res.body).to.have.property('shared_at');
    expect(res.body).to.have.property('message');

    // Validate field types
    expect(res.body.share_id).to.be.a('string');
    expect(res.body.video_id).to.be.a('string');
    expect(res.body.recipient_email).to.be.a('string');
    expect(res.body.status).to.be.a('string');
    expect(res.body.shared_at).to.be.a('string');
    expect(res.body.message).to.be.a('string');

    // Validate field values are not empty
    expect(res.body.share_id).to.not.equal('');
    expect(res.body.video_id).to.not.equal('');
    expect(res.body.recipient_email).to.not.equal('');
    expect(res.body.status).to.not.equal('');
    expect(res.body.shared_at).to.not.equal('');
    expect(res.body.message).to.not.equal('');

    // Validate status value
    expect(res.body.status.toLowerCase()).to.be.oneOf(['pending', 'sent']);

    // Validate recipient email format
    expect(res.body.recipient_email).to.include('@');

    // Validate shared_at is ISO timestamp
    expect(res.body.shared_at).to.match(/^\\d{4}-\\d{2}-\\d{2}t\\d{2}:\\d{2}:\\d{2}\\.\\d{3}z$/i);

    // Validate message content
    expect(res.body.message.toLowerCase()).to.include('share request');
  });
}
